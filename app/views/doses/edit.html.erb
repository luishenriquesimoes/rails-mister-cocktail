<div class="show-grid">
  <div class="main-card" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= cl_image_path @cocktail.photo.key, crop: :fill %>')">
    <div class="main-card-text">
      <%= @cocktail.name %>
      <%= link_to '<i class="fas fa-pen"></i>'.html_safe, edit_cocktail_path(@cocktail) %>
      <%= link_to '<i class="fas fa-trash-alt"></i>'.html_safe,
                  cocktail_path(@cocktail),
                  method: :delete,
                  data: { confirm: "Are you sure?" } %>
    </div>
  </div>

  <div class="card doses-card">
    <div class="card-body d-flex flex-column">
        <div class="align-items-start mb-5">
          <h1 class="form-header text-center text-light">Edit dose details</h1>
          <%= render 'form', cocktail: @cocktail, dose: @dose %>
        </div>
      <%= link_to "Add dose to this cocktail", new_cocktail_dose_path(@cocktail), { class: "dose-button mt-auto"} %>
    </div>


  </div>
</div>